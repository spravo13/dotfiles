	background yes
    use_xft yes
    xftfont HandelGotD:size=8
    xftalpha 0.5
    update_interval 3.0
    total_run_times 0
    own_window yes
    own_window_type normal
    own_window_transparent yes
    own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
    double_buffer yes
    minimum_size  205 730
    maximum_width 215
    draw_shades no
    draw_outline no
    draw_borders no
    draw_graph_borders yes
    default_color grey
    default_shade_color red
    default_outline_color green
    alignment top_right
    gap_x 5
    gap_y 35
    no_buffers yes
    uppercase no
    cpu_avg_samples 2
    override_utf8_locale no

    TEXT
    Date & Time ${hr 2}
    ${alignc}${font Arial Black:size:24}${time %l:%M}${font}
    ${alignc}${Time %A %m %d %Y}
    
    System ${hr 2}
    Hostname $alignr $nodename
    Uptime $alignr $uptime
    
    MEM $alignc $mem / $memmax $alignr $memperc%
    $membar
    
    swap $alignc $swap / $swapmax $alignr $swapperc%
    ${swapbar}

    / $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_free_perc /}%
    ${fs_bar /}
    
    CPU ${hr 2}
        CPU 1$alignr ${cpu cpu0}%
  #${cpugraph cpu0}
      CPU 2$alignr ${cpu cpu1}%
  #${cpugraph cpu1}
      CPU 3$alignr ${cpu cpu2}%
  #${cpugraph cpu2}
      CPU 4$alignr ${cpu cpu3}%
  #${cpugraph cpu3}
    
    Battery ${hr 2}
	 Percent Left: $alignr ${battery_percent BAT0}%
	 Time Left: $alignr ${execi 60 acpi -b | awk '{print$5}'}
    
    Network ${hr 2}
    $alignc WIRELESS 
	 Local IP: ${alignr}${addr wlan0}
	 ESSID: $alignr ${wireless_essid wlan0}
	 Quality: $alignr ${wireless_link_qual_perc wlan0}%
	 Inbound: $alignr ${downspeed wlan0} kb/s
	 Outbound: $alignr ${upspeed wlan0} kb/s
    
    $alignc WIRED
	 Local Ip: ${alignr}${addr eth0}
	 Inbound $alignr ${downspeed eth0} kb/s
	 Outbound $alignr ${upspeed eth0} kb/s
    
    Processes ${hr 2}
     $alignc   $processes processes ($running_processes running)
	 NAME $alignr PID    CPU
	 ${top name 1} $alignr ${top pid 1} ${top cpu 1}
	 ${top name 2} $alignr ${top pid 2} ${top cpu 2}
	 ${top name 3} $alignr ${top pid 3} ${top cpu 3}
	 ${top name 4} $alignr ${top pid 4} ${top cpu 4}
	 ${top name 5} $alignr ${top pid 5} ${top cpu 5}
	 ${top name 6} $alignr ${top pid 6} ${top cpu 6}
	 ${top name 7} $alignr ${top pid 7} ${top cpu 7}
        ${top name 8} $alignr ${top pid 8} ${top cpu 8}
        ${top name 9} $alignr ${top pid 9} ${top cpu 9}
